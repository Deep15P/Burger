<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">BURGERS!</h1>
    <p class="lead">Eat your favorite burger or create your own.</p>
  </div>
</div>

 <ul class="list-group list-group-flush">
  <li class="list-group-item">
  
{{#each burgers}}
{{#unless this.devoured}}

<div>
  {{this.burger_name}}
</div>
<button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}"
  data-newDevoured="{{devour}}"><span class="fa fa-usd"></span></button>

{{/unless}}
{{/each}}
</li>
  
</ul>



<h2>Ate it!</h2>

<ul>
{{#each burgers}}
{{#if this.devoured}}

<div>
  {{this.burger_name}}
</div>
 <button type="button" class="delete-burger btn btn-danger" id="trashbutton" data-id="{{this.id}}"
  data-newDevoured="{{devour}}"><span class="fa fa-trash"></span></button>

{{/if}}
{{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

