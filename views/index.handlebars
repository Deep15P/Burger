<h1> BURGERS! </h1>

<ul>
{{#each burgers}}
{{#unless this.devoured}}

<div>
  {{this.burger_name}}
</div>

{{/unless}}
{{/each}}
</ul>

<h2>Ate it!</h2>

<ul>
{{#each burgers}}
{{#if this.devoured}}

<div>
  {{this.burger_name}}
</div>
 <button type="button" class="trashburger btn btn-danger" id="trashbutton" data-id="{{this.id}}"
  data-newDevoured="{{devour}}"><span class="fa fa-trash"></span></button>

{{/if}}
{{/each}}
</ul>

<h2>Add a burger</h2>
